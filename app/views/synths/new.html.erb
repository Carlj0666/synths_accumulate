<h1> New Synth </h1>

<%= form_for(@synth) do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :brand %>
  <%= f.text_field :brand %><br>
  <%= f.label :hybrid %>
  <%= f.text_field :hybrid %><br>
  <%= f.label :price %>
  <%= f.text_field :price, min: 0, step: 0.01 %><br>
  <%= f.label :description %>
  <%= f.text_field :description %><br>
  <%= f.submit %>
<% end %>
